{
  "name": "identity-service",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rimraf public && npm run compile-to-public",
    "build:debug": "nodemon -L --watch ./public --inspect=0.0.0.0:9999 --ignore node_modules public/main/http/express/server.js",
    "build:down": "docker-compose down",
    "build:server": "nodemon --ignore node_modules public/main/http/express/server.js",
    "build:up": "yarn build && docker-compose up",
    "build:watch": "rimraf public && npm run compile-to-public:watch",
    "compile-to-public": "tsc -p tsconfig-build.json",
    "compile-to-public:watch": "yarn compile-to-public -- --w",
    "create-views-in-public": "mkdir -p public",
    "sonar:scanner": "yarn test:ci && sonar-scanner",
    "test": "jest --passWithNoTests --noStackTrace --runInBand --no-cache --forceExit --detectOpenHandles",
    "test:ci": "yarn test --coverage",
    "test:staged": "yarn test --silent"
  },
  "author": "Allan Gaby",
  "license": "MIT",
  "devDependencies": {
    "@types/amqplib": "^0.5.17",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.1.7",
    "@types/html-pdf": "^2.2.0",
    "@types/ioredis": "^4.22.2",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/multer": "^1.4.5",
    "@types/nodemailer": "^6.4.1",
    "@types/supertest": "^2.0.10",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "eslint": "^7.21.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "faker": "^5.4.0",
    "git-commit-msg-linter": "^3.0.0",
    "husky": "^5.1.2",
    "jest": "^26.6.3",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^10.5.4",
    "rimraf": "^3.0.2",
    "sonarqube-scanner": "^2.8.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.2",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.2"
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-reporter.xml",
    "indent": 4
  },
  "_moduleAliases": {
    "@": "public"
  },
  "dependencies": {
    "amqplib": "^0.7.1",
    "bcrypt": "^5.0.1",
    "cross-var": "^1.1.0",
    "dotenv": "^8.2.0",
    "exceljs": "^4.2.1",
    "express": "^4.17.1",
    "handlebars": "^4.7.7",
    "html-pdf": "^2.2.0",
    "ioredis": "^4.24.6",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "multer": "^1.4.2",
    "nodemailer": "^6.5.0",
    "nodemon": "^2.0.7",
    "pg": "^8.5.1",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.31",
    "uuid": "^8.3.2"
  }
}
